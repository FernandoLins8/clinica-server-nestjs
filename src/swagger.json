{
  "openapi": "3.0.0",
  "info": {
    "title": "Clinica Teste Documentation",
    "description": "Clinica API",
    "version": "1.0.0"
  },
  "paths": {
    "/users": {
      "post": {
        "summary": "Create a new user",
        "operationId": "create",
        "requestBody": {
          "description": "User to be created",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateClientDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful creation of user"
          }
        }
      }
    },
    "/services": {
      "get": {
        "summary": "Get all services",
        "operationId": "index",
        "responses": {
          "200": {
            "description": "Successful retrieval of services",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Service"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new service",
        "operationId": "create",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "Service to be created",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateServiceDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful creation of service"
          }
        }
      }
    },
    "/services/{id}": {
      "delete": {
        "summary": "Delete a service",
        "operationId": "delete",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of service to delete",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Successful deletion of service"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateClientDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": ["name", "email", "password"]
      },
      "CreateServiceDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "value": {
            "type": "number"
          },
          "durationInMinutes": {
            "type": "number"
          }
        },
        "required": ["name", "value", "durationInMinutes"]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }  
  }
}